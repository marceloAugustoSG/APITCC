generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  regra        String
  Paciente     Paciente?
  notificacoes Notificacao[]

  @@map("usuarios")
}

model Paciente {
  id             Int        @id @default(autoincrement())
  nome           String
  tipo           String
  matricula      String
  dataNascimento DateTime
  telefone       String?
  consultas      Consulta[]
  usuario        Usuario    @relation(fields: [usuarioId], references: [id])
  usuarioId      Int        @unique

  @@map("pacientes")
}

model Consulta {
  id               Int           @id @default(autoincrement())
  data             DateTime?
  status           String
  observacao       String
  servico          String?
  pacienteId       Int?
  profissionalId   Int?
  Paciente         Paciente?     @relation(fields: [pacienteId], references: [id])
  Profissional     Profissional? @relation(fields: [profissionalId], references: [id])
  data_solicitacao DateTime      @default(now())

  @@map("consultas")
}

model Profissional {
  id            Int        @id @default(autoincrement())
  nome          String
  especialidade String
  consultas     Consulta[]

  @@map("profissionais")
}

model Notificacao {
  id        Int      @id @default(autoincrement())
  mensagem  String
  Usuario   Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId Int?

  @@map("notificacoes")
}
